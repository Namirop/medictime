<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#523D83">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ajout prise de mÃ©dicament"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDICAMENT : "
                android:layout_gravity="center"
                android:textSize="28sp"
                android:padding="10dp"
                android:layout_marginTop="30sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:gravity="center">

                <Spinner
                    android:id="@+id/medicine_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10sp" />

                <Button
                    android:id="@+id/add_medicine_button"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:padding="16dp"
                    android:text="@string/add_medicine_button_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATES :"
                android:layout_gravity="center"
                android:textSize="28sp"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:gravity="center">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="10dp"
                    tools:ignore="HardcodedText"
                    android:id="@+id/start_date"
                    />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    tools:ignore="HardcodedText"
                    android:id="@+id/end_date"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRISES :"
                android:layout_gravity="center"
                android:textSize="38sp"
                android:padding="10dp"
                android:layout_marginTop="30sp"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/morning_switch_intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATIN"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

            <Switch
                android:id="@+id/lunchtime_switch_intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIDI"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

            <Switch
                android:id="@+id/evening_switch_intake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOIR"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/medicine_intake_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="Valider"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
